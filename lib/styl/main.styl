*
	padding 0
	margin 0
	box-sizing border-box

@font-face
	font-family DINWeb
	src url("../font/DINWeb.eot")


@font-face
	font-family DINWeb
	src url("../font/DINWeb.woff") format("woff")

body
	font-family: 'Gotham A', 'Gotham B'; font-weight: 400; font-style: normal;
	font-size 14px
	line-height 30px
	color #fff

h1, h2, h3, h4, h5
	font-family 'Hoefler Titling A', 'Hoefler Titling B'
	font-weight 300
	font-style normal

h1, h2
	font-size 36px
	line-height 36px

	// For the logo
	.period
		color #ff0000

#header
	padding 30px 40px

#control-bar
	border-top 1px solid #333
	border-bottom 1px solid #333
	h = 125px
	height h
	display flex

	.selects
		display flex
		flex-direction column
		border-right 1px solid #333
		user-select none

		.select
			display flex
			max-width auto
			flex auto
			padding-right 40px

			border-bottom 1px solid #333
			&:last-child
				border-bottom none	

			.option
				flex 1
				min-width 120px
				position relative
				line-height (h/2)
				padding-left 40px
				cursor pointer
				color #999

				&:hover
					color #fff
				&:active
					color #ccc
				
				&.active
					color #fff
					font-weight bold

	.main
		padding-top 35px
		display flex

		.play
			width 75px
			height 75px

			margin 0 40px
			margin-top -10px



